<div class='page-header'>
  <h1>Change Password</h1>
</div>

<%= form_for @user, html: { class: 'signin-form form-horizontal', role: 'form' } do |f| %>

  <div class='form-group'>
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class='col-sm-5'>
      <span class='form-control'> <%= @user.name %> </span>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class='col-sm-5'>
      <%= f.text_field :password, type: 'password', class: 'form-control', value: '', placeholder:'xxxxxxxx', required:'' %>
      <%= error_messages_for(f.object, :password) %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
    <div class='col-sm-5'>
      <%= f.text_field :password_confirmation, type: 'password', class: 'form-control', value: '', placeholder:'xxxxxxxx', required:'' %>
      <%= error_messages_for(f.object, :password_confirmation) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-5'>
      <button class='btn btn-success'>Change Password</button>
    </div>
  </div>

<% end %>
