<div class='page-header'>
  <h1>Sign In</h1>
</div>

<% if @session.errors[:base].any? %>
  <div class='alert alert-error'>
    <%= @session.errors[:base].first %>
  </div>
<% end %>

<%= form_for @session, html: {class: 'signin-form form-horizontal', role: 'form'} do |f| %>

  <div class='form-group'>
    <%= f.label :username, class: 'col-sm-2 control-label' %>
    <div class='col-sm-5'>
      <%= f.text_field :username, class: 'form-control', placeholder:'Username', required:'' %>
      <%= error_messages_for(f.object, :username) %>
    </div>
  </div>

  <div class='form-group'>
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class='col-sm-5'>
      <%= f.text_field :password, type: 'password',class: 'form-control', placeholder:'xxxxxxxx', required:'' %>
      <%= error_messages_for(f.object, :password) %>
    </div>
  </div>

  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-5'>
      <button class='btn btn-success'>Sign In</button>
    </div>
  </div>

<% end %>
