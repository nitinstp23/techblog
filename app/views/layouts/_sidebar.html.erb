<div class='btn-group hidden-xs' id='nav-menu'>
  <button type='button' class='btn btn-default dropdown-toggle' data-toggle='dropdown'>
    <i class='fa fa-bars'></i>
  </button>
  <ul class='dropdown-menu' role='menu'>
    <li>
      <%= link_to root_url do %>
        <i class='fa fa-home'></i> Home
      <% end %>
    </li>

    <li class='divider'></li>
    <li>
      <%= link_to new_post_url do %>
        <i class='fa fa-plus'></i> New Post
      <% end %>
    </li>

    <%= signout_link %>

  </ul>
</div>

<div class='col-sm-3 sidebar hidden-xs'>
  <header class='sidebar-header' role='banner'>
    <%= link_to github_url, target: '_blank' do %>
      <%= image_tag avatar_url, alt: 'My Avatar', class: 'img-circle' %>
    <% end %>

    <h3 class='title'>
      <%= link_to 'nitin misra', github_url, target: '_blank' %>
    </h3>
  </header>

  <div id='bio' class='text-center'>
    Rubyist at <%= link_to 'R Systems Inc.', company_url %> <br />
    Lives in Noida, India <br />
    Phone: +91 9650733599 <br />
  </div>

  <div id='contact-list' class='text-center'>
    <ul class='list-unstyled list-inline'>
      <li>
        <%= link_to github_url, target: '_blank', type: 'button', class: 'btn btn-default btn-sm' do %>
          <i class='fa fa-github-alt fa-lg'></i>
        <% end %>
      </li>

      <li>
        <%= link_to twitter_url, target: '_blank', type: 'button', class: 'btn btn-default btn-sm' do %>
          <i class='fa fa-twitter fa-lg'></i>
        <% end %>
      </li>

      <li>
        <%= link_to mailto_url, target: '_blank', type: 'button', class: 'btn btn-default btn-sm' do %>
          <i class='fa fa-envelope fa-lg'></i>
        <% end %>
      </li>

      <li>
        <%= link_to linkedin_url, target: '_blank', type: 'button', class: 'btn btn-default btn-sm' do %>
          <i class='fa fa-linkedin fa-lg'></i>
        <% end %>
      </li>
    </ul>
  </div>
</div>
